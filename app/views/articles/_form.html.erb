<%= form_with model: @article, data: { turbo: false }, class: "row g-3" do |f| %>
  <div class="col-12">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="col-12">
    <%= f.label :content, class: "form-label" %>
    <%= f.text_area :content, rows: 10, class: "form-control", required: true %>
  </div>
  <div class="col-12">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", (@article.persisted? ? @article : articles_path), class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>
